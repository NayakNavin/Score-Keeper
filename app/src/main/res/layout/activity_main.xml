<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="80dp"
                android:layout_marginTop="25dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="Team A"
                android:textColor="@color/laker"
                android:textSize="@dimen/TextFontSize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/team_a_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/textViewVerticalMargin"
                android:layout_marginRight="@dimen/textViewHorizontalMargin"
                android:fontFamily="sans-serif-dark"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/gswYellow"
                android:textSize="@dimen/scoreTextSize" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/buttonMargin_2"
                android:layout_marginRight="@dimen/buttonMargin_1"
                android:backgroundTint="@color/laker"
                android:onClick="addThreeForTeamA"
                android:text="+3 Points"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/buttonFontSize" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="@dimen/buttonMargin_2"
                android:layout_marginRight="@dimen/buttonMargin_1"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/laker"
                android:onClick="addTwoForTeamA"
                android:text="+2 Points"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/buttonFontSize" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/buttonMargin_2"
                android:layout_marginRight="@dimen/buttonMargin_1"
                android:backgroundTint="@color/laker"
                android:onClick="foulForTeamA"
                android:text="Foul"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/buttonFontSize" />

            <TextView
                android:id="@+id/team_a_foul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/textViewHorizontalMargin"
                android:layout_marginTop="@dimen/textViewVerticalMargin"
                android:fontFamily="sans-serif-dark"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/gswYellow"
                android:textSize="@dimen/scoreTextSize" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/logo_1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="25dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="Team B"
                android:textColor="@color/gswBlue"
                android:textSize="@dimen/TextFontSize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/team_b_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/textViewVerticalMargin"
                android:layout_marginLeft="@dimen/textViewHorizontalMargin"
                android:fontFamily="sans-serif-dark"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/gswBlueDark"
                android:textSize="@dimen/scoreTextSize" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/buttonMargin_1"
                android:layout_marginRight="@dimen/buttonMargin_2"
                android:backgroundTint="@color/gswBlue"
                android:gravity="center"
                android:onClick="addThreeForTeamB"
                android:text="+3 Points"
                android:textColor="@color/white"
                android:textSize="@dimen/buttonFontSize" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="@dimen/buttonMargin_1"
                android:layout_marginRight="@dimen/buttonMargin_2"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/gswBlue"
                android:gravity="center"
                android:onClick="addTwoForTeamB"
                android:text="+2 Points"
                android:textColor="@color/white"
                android:textSize="@dimen/buttonFontSize" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/buttonMargin_1"
                android:layout_marginRight="@dimen/buttonMargin_2"
                android:backgroundTint="@color/gswBlue"
                android:gravity="center"
                android:onClick="foulForTeamB"
                android:text="Foul"
                android:textColor="@color/white"
                android:textSize="@dimen/buttonFontSize" />

            <TextView
                android:id="@+id/team_b_foul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/textViewHorizontalMargin"
                android:layout_marginTop="@dimen/textViewVerticalMargin"
                android:fontFamily="sans-serif-dark"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/gswBlueDark"
                android:textSize="@dimen/scoreTextSize" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/logo_5" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/vs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:fontFamily="sans-serif-dark"
        android:gravity="center"
        android:text="Vs"
        android:textColor="@color/redDark"
        android:textSize="60sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp"
        android:background="@color/darkRed"
        android:gravity="center"
        android:onClick="resetScore"
        android:text="Reset"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:scaleType="center"
        android:src="@drawable/nba_1" />

</RelativeLayout>
